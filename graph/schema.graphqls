# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Book {
  id: ID!
  code: String!
  title: String!
  author: Author!
}

type Author {
  name: String!
  country: String!
}

type Query {
  books: [Book!]!
  bookId(id: ID!): Book
}

input NewBook {
  code: String!
  title: String!
  authorName: String!
  authorCountry: String!
}

type Mutation {
  createBook(input: NewBook!): Book!
  updateBook(input: NewBook!, id:ID!): Book!
}
